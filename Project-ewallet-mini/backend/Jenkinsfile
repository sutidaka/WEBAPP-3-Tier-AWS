pipeline {
  agent any

  environment {
    AWS_REGION = 'ap-southeast-1'
    ECR_REPO = 'ewallet-backend'
    IMAGE_TAG = 'latest'
    AWS_ACCOUNT_ID = '314146333464'   
    BASTION_HOST = "10.0.1.8"
    REMOTE_HOST = '10.0.2.216'
    REMOTE_PATH = '/opt/backend'
    ECR_URL = "314146333464.dkr.ecr.ap-southeast-1.amazonaws.com"
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/sutidaka/WEBAPP-3-Tier-AWS.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        dir('Project-ewallet-mini/backend') {
          sh """
            docker build -t ${ECR_REPO}:${IMAGE_TAG} .
          """
        }
      }
    }

    stage('Tag & Push to ECR') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'jenkins-ecr-user1', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
          sh """
            aws configure set aws_access_key_id ${AWS_ACCESS_KEY_ID}
            aws configure set aws_secret_access_key ${AWS_SECRET_ACCESS_KEY}
            aws configure set default.region ${AWS_REGION}

            aws ecr get-login-password --region ${AWS_REGION} \
              | docker login --username AWS --password-stdin ${ECR_URL}

            docker tag ${ECR_REPO}:${IMAGE_TAG} ${ECR_URL}/${ECR_REPO}:${IMAGE_TAG}
            docker push ${ECR_URL}/${ECR_REPO}:${IMAGE_TAG}
          """
        }
      }
    }

    stage('Deploy to EC2') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'jenkins-ecr-user1',
          usernameVariable: 'AWS_ACCESS_KEY_ID',
          passwordVariable: 'AWS_SECRET_ACCESS_KEY'
        )]) {

          sshagent(['app-tier']) {
            sh """
              ssh -o StrictHostKeyChecking=no ec2-user@${REMOTE_HOST} << 'EOF'
                export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
                export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

                cd ${REMOTE_PATH}

                aws ecr get-login-password --region ${AWS_REGION} \
                  | docker login --username AWS --password-stdin ${ECR_URL}

                docker compose pull
                docker compose up -d
EOF
            """
          }
        }
      }
    }

  } // <- ðŸ”§ à¸›à¸´à¸” stages

  post {
    success {
      echo 'âœ… Deploy Success!'
    }
    failure {
      echo 'âŒ Deploy Failed'
    }
  }
}
